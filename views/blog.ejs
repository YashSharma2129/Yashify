<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('./partials/head') %>
        <title>
            <%= blog.title %>
        </title>
</head>

<body>
    <%- include('./partials/nav') %>
        <div class="container mt-4">
            <div class="blog-post">
                <h1>
                    <%= blog.title %>
                </h1>
                <img src="<%- blog.coverImageURL %>" width="700" alt="Cover image for <%= blog.title %>">
                <pre class="mt-3"><%- blog.body %></pre>
            </div>
            <div class="container mt-4">
                <img src="<%- blog.createdBy.profileImageURL %>" width="50"
                    alt="<%= blog.createdBy.FullName %>'s profile image" />
                <span>
                    <%= blog.createdBy.FullName %>
                </span>
            </div>
            <div class="container mt-3">
                <h1>Comments(<%= comments.length %>)</h1>
                <% if (locals.user) { %>
                    <form action="/blog/comment/<%= blog._id %>" method="post">
                        <div class="mb-3">
                            <input type="text" class="form-control" name="content" placeholder="Enter your comment"
                                required>
                            <button class="btn btn-sm btn-primary mt-2" type="submit">Add</button>
                        </div>
                    </form>
                    <div class="mt-3">
                        <% comments.forEach(comment=> { %>
                            <div class="comment">
                                <!-- Comment details -->
                                <img src="<%- comment.createdBy.profileImageURL %>" width="50"
                                    alt="<%= comment.createdBy.FullName %>'s profile image" />
                                <strong>
                                    <%= comment.createdBy.FullName %>:
                                </strong>
                                <pre><%= comment.content %></pre>

                                <button class="btn btn-sm btn-secondary mt-2" id="reply-button-<%= comment._id %>"
                                    onclick="toggleReplyForm('<%= comment._id %>')">Reply</button>


                                <div class="replies mt-3">
                                    <% comment.replies.forEach(reply=> { %>
                                        <div class="reply mb-2">
                                            <img src="<%- reply.createdBy.profileImageURL %>" width="40"
                                                alt="<%= reply.createdBy.FullName %>'s profile image" />
                                            <strong>
                                                <%= reply.createdBy.FullName %>:
                                            </strong>
                                            <pre><%= reply.content %></pre>
                                        </div>
                                        <% }) %>
                                </div>

                                <!-- Reply form (hidden by default) -->
                                <div id="reply-form-<%= comment._id %>" style="display: none;">
                                    <form action="/blog/comments/<%= comment._id %>/replies" method="post">
                                        <div class="mb-3">
                                            <input type="text" class="form-control" name="content"
                                                placeholder="Reply to this comment" required>
                                            <button class="btn btn-sm btn-secondary mt-2" type="submit">Add
                                                Reply</button>
                                        </div>
                                    </form>
                                </div>

                            </div>
                            <% }) %>
                    </div>
                    <% } else { %>
                        <p>Please log in to leave a comment.</p>
                        <% } %>
            </div>
        </div>

        <%- include('./partials/script') %>
            <script>
                function toggleReplyForm(commentId) {
                    const replyForm = document.getElementById(`reply-form-${commentId}`);
                    const replyButton = document.getElementById(`reply-button-${commentId}`);

                    // Toggle the visibility of the reply form
                    if (replyForm.style.display === "none" || replyForm.style.display === "") {
                        replyForm.style.display = "block";
                        replyButton.innerText = "Cancel Reply";  // Change button text
                    } else {
                        replyForm.style.display = "none";
                        replyButton.innerText = "Reply";  // Change back button text
                    }
                }
            </script>

</body>

</html>